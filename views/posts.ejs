<!doctype html>

<html lang='en'>
  <% include ../views/partials/_head %>
  <% include ../views/partials/_header %>

  <body>
    <div class="container">
      <div class="row">
      <% for(let i = allPosts.length - 1; i >= 0; i--) { %>
        <div class="col-sm-12">
          <h3><%= allPosts[i].email %></h3>
        </div><!-- /col-sm-12 -->
      </div><!-- /row -->
      <div class="row">
        <div class="col-sm-1">
          <div class="thumbnail">
            <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
          </div><!-- /thumbnail -->
        </div><!-- /col-sm-1 -->

        <div class="col-sm-5">
          <div class="panel panel-default">
            <div class="panel-heading">
              <strong><%= allPosts[i].title %></strong>
            </div>
          <div class="panel-body">
            <%= allPosts[i].description %>
          </div><!-- /panel-body -->
        </div><!-- /panel panel-default -->
      </div><!-- /col-sm-5 -->
      <% } %>
    </div>
  </body>

</html>