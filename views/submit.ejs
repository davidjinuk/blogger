<!doctype html>

<html lang='en'>
  <% include ../views/partials/_head %>
  <% include ../views/partials/_header %>
  
  <body>
    <div class="container">
      <h1>Let your voice be heard!</h1>
      <form method="POST" action="/posts/submit">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
              <label>Email Address</label>
              <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
              <label>Title</label>
              <input type="text" class="form-control" name="title" placeholder="Enter title">
              <small id="titleHelp" class="form-text text-muted">Maximum of 255 characters</small>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-4">
              <label>Description</label>
              <textarea class="form-control" rows="3" placeholder="Enter description" name="description"></textarea>
              <small id="descriptionHelp" class="form-text text-muted">Between 3-1000 characters</small>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>

</html>